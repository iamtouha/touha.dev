---
import FeatherIcon from "@/components/icons/Feather.astro";
import MessageIcon from "@/components/icons/Message.astro";
import AtIcon from "@/components/icons/At.astro";
import GithubIcon from "@/components/icons/Github.astro";
import { cn } from "@/lib/utils";

interface Props {
  active?: string;
}

const links = [
  {
    name: "Projects",
    href: "/projects",
    icon: FeatherIcon,
  },
  {
    name: "Posts",
    href: "/posts",
    icon: MessageIcon,
  },
  {
    name: "Contact",
    href: "/contact-me",
    icon: AtIcon,
  },
  {
    name: "Github",
    href: "https://github.com/touha98",
    icon: GithubIcon,
  },
];

const { active } = Astro.props;
---

<nav class={cn("p-2 flex space-x-5 sm:space-x-7")}>
  {
    links.map((link) => (
      <a
        href={link.href}
        class={cn(
          "group text-muted-foreground focus:outline-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary",
        )}
      >
        <div class="flex flex-wrap items-center justify-center text-xs sm:text-sm font-bold gap-1 sm:gap-2">
          {/** <div
            class={cn("p-1 rounded-lg", {
              "bg-primary/30": active?.startsWith(link.href),
            })}
          /> */}
          <link.icon
            class={cn(
              "w-[18px] h-[18px]",
              "transition transform ease-out group-hover:shadow-lg group-hover:scale-125 group-active:translate-y-1 duration-500",
            )}
          />

          <span>{link.name}</span>
        </div>
      </a>
    ))
  }
</nav>
