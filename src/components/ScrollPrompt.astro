---
import { cn } from "@/lib/utils";
---

<div class="mt-12 h-16 grid place-items-center">
  <div
    class={cn(
      "mouse relative w-5 h-9 rounded-xl border-2 border-muted-foreground",
      "before:content-[''] before:w-1 before:h-1 before:rounded-full before:absolute before:bg-muted-foreground before:left-1/2 before:-translate-x-1/2",
    )}
  >
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
    </div>
  </div>
</div>

<style>
  .mouse::before {
    top: 0.375rem;
    opacity: 1;
    animation: mouse 2s infinite;
  }
  @keyframes mouse {
    from {
      opacity: 1;
      top: 0.375rem;
    }
    to {
      opacity: 0;
      top: 1.875rem;
    }
  }
</style>
