---
interface Props {
  title: string;
  description?: string;
  image?: string;
}
const { title, description, image } = Astro.props;
---

<title>{{ title }}</title>
{
  description && (
    <>
      <meta name="description" content={description} />
      <meta name="og:description" content={description} />
    </>
  )
}
{
  image && (
    <>
      <meta name="image" content={image} />
      <meta name="og:image" content={image} />
    </>
  )
}
