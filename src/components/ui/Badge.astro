---
import { badgeVariants, type BadgeVariants } from "@/lib/ui-variants/badge";
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a">, BadgeVariants {}

const { variant, class: className, ...props } = Astro.props;
---

<a {...props} class={cn(badgeVariants({ variant, class: className }))}>
  <slot />
</a>
